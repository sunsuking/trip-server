<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.trip.domain.tour.mapper.TourMapper">
    <!--  SELECT  -->
    <select id="findAll">
        SELECT *
        FROM tour_with_address;
    </select>

    <select id="findCityById">
        SELECT *
        FROM city
        WHERE city_code = #{cityId};
    </select>

    <select id="findById">
        SELECT *
        FROM tour_with_address
        WHERE tour_id = #{tourId};
    </select>

    <select id="findStayByCityId">
        SELECT *
        FROM tour_with_content
        WHERE city_code = #{cityId}
          AND content_type = 'STAY';
    </select>

    <select id="findWithContentByKeyword" resultType="com.ssafy.trip.domain.tour.entity.TourWithContent">
        SELECT *
        FROM tour_with_content
        <where>
            <if test="city != 0">
                AND city_code = #{city}
            </if>
            <if test="keyword != null">
                AND name LIKE CONCAT('%', #{keyword}, '%');
            </if>
        </where>
    </select>

    <select id="findCategories">
        SELECT *
        FROM tour_content;
    </select>

    <select id="findCities">
        SELECT *
        FROM city;
    </select>

    <select id="findTowns">
        SELECT town_code, name
        FROM town
        WHERE city_code = #{cityCode}
    </select>
</mapper>